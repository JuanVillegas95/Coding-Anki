{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C: clang build active file",
      "command": "/usr/bin/clang",
      "args": [
        "-std=c11",
        "-fdiagnostics-color=always",
        "-Wall",
        "-g",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/dependencies/include",
        "-I${workspaceFolder}/dependencies/include/glad",
        "-L${workspaceFolder}/dependencies/library",
        "${workspaceFolder}/dependencies/library/libglfw.3.4.dylib",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/build/app",
        "-framework",
        "OpenGL",
        "-framework",
        "GLUT",           // Added GLUT framework
        "-framework",
        "Cocoa",
        "-framework",
        "IOKit",
        "-framework",
        "CoreVideo",
        "-framework",
        "CoreFoundation",
        "-Wno-deprecated"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang"
    }
  ]
}
